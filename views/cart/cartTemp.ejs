<% layout('layout/boilerplate') -%>

<head>
    <style>
        .btn-link{
            color:black !important;
            text-decoration: none;
            font-size: 23px;
        }
        #form1{
            width:80px !important;
            height:50px !important;
        }
    </style>
</head>





  <section class="h-100 gradient-custom">
    <div class="container py-5">
      <div class="row d-flex justify-content-center my-4">
        <div class="col-md-8">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Cart - <%= ti %> items </h5>
            </div>
            <div class="card-body">
              <!-- Single item -->
               <% for(let item of user.cart) {%>

              

              <div class="row">
                <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                  <!-- Image -->
                  <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                    <img src=<%= item.img %>
                      class="w-100" alt="Blue Jeans Jacket" />
                    <a href="#!">
                      <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                    </a>
                  </div>
                </div>
  
                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                  <p><strong><%= item.name %></strong></p>
                  <a href="/products/<%=item.id%>/delete" ><i class="fas fa-trash"></i></a>
                  <button type="button" class="btn btn-danger btn-sm mb-2" data-mdb-toggle="tooltip" title="Move to the wish list">
                    <i class="fas fa-heart"></i>
                  </button>
                </div>
  
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                  <div class="d-flex mb-4" style="max-width: 300px">
                    <button class="btn btn-link px-2 decrease" onclick="
                    this.parentNode.querySelector('input[type=number]').stepDown() ;  
                    const updatedValue = this.parentNode.querySelector('input[type=number]').value;
                    window.location.href = `/products/user/${updatedValue}/<%=item.id%>/cart`;
                    ;"> - </button>
  
                    <div>
                      <input id="form1" min="0" name="quantity" value=<%= item.count  %> type="number"  >
                    </div>
  
                    <button class="btn btn-link px-2 decrease" onclick="
                    this.parentNode.querySelector('input[type=number]').stepUp() ;  
                    const updatedValue2 = this.parentNode.querySelector('input[type=number]').value;
                    window.location.href = `/products/user/${updatedValue2}/<%=item.id%>/cart`;
                    ;"> + </button>
                  </div>
                  <p class="text-start text-md-center">
                    <strong>$<%= item.price  %></strong>
                  </p>
                </div>
              </div>
              <hr style="color: black;" >
              
          <% } %>

          
          <h6 class="mb-0"><a href="/products/product2" class="text-body"><i
            class="fas fa-long-arrow-alt-left me-2"></i>Back to shop</a></h6>


          </div>
          </div>
          <div class="card mb-4">
            <div class="card-body">
              <p><strong>Expected shipping delivery</strong></p>
              <p class="mb-0">12.10.2020 - 14.10.2020</p>
            </div>
          </div>
          <div class="card mb-4 mb-lg-0">
            <div class="card-body">
              <p><strong>We accept</strong></p>
              <img class="me-2" width="45px"
                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                alt="Visa" />
              <img class="me-2" width="45px"
                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                alt="American Express" />
              <img class="me-2" width="45px"
                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                alt="Mastercard" />
              <img class="me-2" width="55px"
                src="https://www.paypalobjects.com/digitalassets/c/website/marketing/apac/C2/logos-buttons/optimize/Online_Primary_Acceptance_Mark_RGB_V2.jpg"
                alt="PayPal acceptance mark" />
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Summary</h5>
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li
                  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                  Products
                  <span>$<%= tc %> </span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                  Shipping
                  <span>Gratis</span>
                </li>
                <li
                  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                  <div>
                    <strong>Total amount</strong>
                    <strong>
                      <p class="mb-0">(including VAT)</p>
                    </strong>
                  </div>
                  <span><strong>$<%= tc %> </strong></span>
                </li>
              </ul>
  

              <form action="/<%= IDD %>/create-checkout-session" method="POST">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Checkout</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>