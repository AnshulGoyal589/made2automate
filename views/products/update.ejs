<% layout('layout/boilerplate') -%>
<head>
    <style>
        label{
            color:green;
            font-size: 22px;
        }
        #heading{
            display: flex;
            justify-content: center;
            color:white;
            width:100%;
            height:100px;
            border:2px solid black;
            align-content: center;
            font-size: 60px;
            background-color: green;
        }
        input{
            height:40px;
            width: 350px;
        }
        fieldset{
            padding:20px;
        }
    </style>
</head>
<div id="heading" >UPDATE DETAILS</div>
<form action="/products/<%= product._id%>?_method=PATCH" method="post"  >
    <fieldset style="border:2px solid green; margin:20px auto ; width:fit-content;border-radius: 20px;background-color: white;">


        <label for="name"  >Name</label>
        <br>
        <input type="text" value="<%= product.name  %> " id="name" name="name" >
        <br>
        <br>
        <label for="url"  >Image Link</label>
        <br>
        <input type="text"  value="<%= product.img %> " id="url" name="img">
        <br>
        <br>
        <label for="price" >Price</label>
        <br>
        <input type="text"  value="<%= product.price %>" id="price" name="price" >
        <br>
        <br>
        <label for="desc" >Description</label>
        <br>
        <input  style="width:350px; height:30px" type="text" class="i" value="<%= product.desc %>"  id="desc" name="desc">
        <br>
        <br>
        <button style="background-color:green;color:white;width:100%;">SUBMIT</button>


    </fieldset>
</form>